<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chinastis.cuoti.view.QuesActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_understand_text"
            android:id="@+id/understand_ques"
            android:layout_width="66dp"
            android:layout_height="28dp" />

        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/review_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="题干"
        android:textColor="@color/text_regular"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ques_images"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="3dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="答案/原图"
        android:textColor="@color/text_regular"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ans_images"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="3dp">

    </android.support.v7.widget.RecyclerView>


   <TextView
       android:id="@+id/tip"
       android:layout_margin="7dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


</LinearLayout>
