<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinastis.cuoti.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_saoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="首页"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </FrameLayout>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:paddingTop="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/class_list_main"
        android:layout_below="@id/toolbar_main"
        android:layout_above="@+id/line_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/line_main"
        android:layout_above="@+id/bottom_bar_main"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_bar_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/plan_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@drawable/icon_plan"
            android:text="计划"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/capture_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@drawable/icon_paiti"
            android:text=""
            android:padding="3dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/me_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/icon_self"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="个人"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>
