<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinastis.cuoti.view.PlanActivity">

    <LinearLayout
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/text_regular"
            android:text="不懂0"
            android:drawableTop="@drawable/icon_plan_not"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_regular"
            android:text="略懂0"
            android:drawableTop="@drawable/icon_plan_little"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_regular"
            android:text="基本懂0"
            android:drawableTop="@drawable/icon_plan_almost"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_regular"
            android:text="完全懂0"
            android:drawableTop="@drawable/icon_plan_absolute"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/holder_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:alpha="0.8"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_plan_sad"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="当前还没有计划哦"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>
