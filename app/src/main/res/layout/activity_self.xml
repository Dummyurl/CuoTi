<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chinastis.cuoti.view.SelfActivity">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/bac_login"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <include layout="@layout/line_setting"/>

    <TextView
        android:id="@+id/profile"
        android:paddingLeft="20dp"
        android:textColor="@color/text_regular"
        android:text="个人信息修改"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/icon_self_change"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <include layout="@layout/line_setting"/>

    <TextView
        android:id="@+id/change_password"
        android:paddingLeft="20dp"
        android:textColor="@color/text_regular"
        android:text="修改密码"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/icon_pwd_change"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <include layout="@layout/line_setting"/>
    <TextView
        android:id="@+id/help_setting"
        android:paddingLeft="20dp"
        android:textColor="@color/text_regular"
        android:text="日期提醒设置"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/icon_self_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <include layout="@layout/line_setting"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/exit_setting"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>
