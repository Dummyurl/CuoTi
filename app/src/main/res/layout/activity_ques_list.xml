<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background"
    tools:context="com.chinastis.cuoti.view.QuesListActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/ques_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



    <LinearLayout
        android:id="@+id/tool_layout"
        android:background="@drawable/shape_print_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:orientation="vertical"
        android:layout_width="66dp"
        android:padding="4dp"
        android:layout_height="124dp">

        <ImageView
            android:id="@+id/add_ques"
            android:layout_margin="4dp"
            android:src="@drawable/icon_add_cuoti"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/print_ques"
            android:layout_margin="4dp"
            android:src="@drawable/icon_print"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_layout"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="已选中0项"
            android:id="@+id/delete_count_list"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="取消"
            android:id="@+id/delete_cancel_list"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="删除"
            android:id="@+id/delete_button_list"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/print_layout"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="已选中0项"
            android:id="@+id/print_count_list"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="取消"
            android:id="@+id/print_cancel_list"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:text="打印"
            android:id="@+id/print_button_list"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
